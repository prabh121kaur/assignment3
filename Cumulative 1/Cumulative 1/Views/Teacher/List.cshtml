@page
@model Cumulative_1.Views.Teacher.ListModel
@{
}

<h2>Teacher</h2>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher.Name)</td>
                <td>@Html.DisplayFor(modelItem => teacher.HireDate)</td>
                <td>@Html.DisplayFor(modelItem => teacher.Salary)</td>
                <td><a href="@Url.Action("Show", "Teacher", new { id = teacher.Id })">Details</a></td>
            </tr>
        }
    </tbody>
</table>